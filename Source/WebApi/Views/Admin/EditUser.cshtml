@model WebApi.Models.ApplicationUser

@section Styles{
    @Styles.Render("~/Bundles/admincss")
}

@section Scripts {
    @Scripts.Render("~/Bundles/adminscripts")
}

@section SideMenu {
    @Html.Partial("~/Views/Shared/_LeftMenu.cshtml")
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <i class="fa fa-users"></i> Användare <small>Redigera</small>
        </h1>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.Id)

    <table class="table table-striped">
        <tr>
            <th>Nyckel</th>
            <th>Värde</th>
        </tr>

        <tr>
            <td>Användarnamn</td>
            <td>@Html.EditorFor(m => m.UserName)</td>
        </tr>

        <tr>
            <td>Sätt admin</td>
            <td>@Html.CheckBox("Admin")</td>
        </tr>

        <tr>
            <td>Spara</td>
            <td><input type="submit" value="Spara"/></td>
        </tr>
    </table>
}
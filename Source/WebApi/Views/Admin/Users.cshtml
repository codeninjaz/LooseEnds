@model GnuggisWebApi.Models.UsersViewModel
@{
    ViewBag.Title = "Users";
}

@section Styles{
    @Styles.Render("~/Bundles/admincss")
}

@section SideMenu {
    @Html.Partial("~/Views/Shared/_LeftMenu.cshtml")
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <i class="fa fa-users"></i> Användare <small>Överblick</small>
        </h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-responsive">
            <tr>
                <th>Id</th><th>Användarnamn</th><th>Poäng</th><th>Redigera</th>
            </tr>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Id</td><td>@user.UserName</td><td>@user.Points</td>
                    <td>
                        <a class="btn btn-default" href="/admin/user/edit/@user.Id">Redigera</a>
                        <a class="btn btn-default" href="/admin/user/delete/@user.Id">Ta bort</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>